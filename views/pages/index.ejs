      html,
      body {
        margin: 0;
        height: 100%;
        width: 100%;
      }
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
      }
      header {
        width: 80%;
        max-width: 800px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-bottom: 1px solid #a55bf7;
      }
      main {
        width: 50%;
        max-width: 600px;
      }
      main h2 {
        font-size: 2rem;
        align-items: center;
        justify-content: center;
        display: flex;
      }
      .section-input {
        display: flex;
        justify-content: flex-start;
        flex-direction: column;
      }
      .section-input label {
        font-family: inherit;
        font-size: 1.5rem;
        padding: 0.5rem 0rem;
      }
      .section-input input {
        font-family: inherit;
        padding: 1rem 0.5rem;
        border: none;
        border: 2px solid #528;
        border-bottom: 4px solid #528;
        text-align: center;
        font-size: 1.5rem;
        transition: border-bottom-color 0.3s ease-in-out;
        caret-color: #528;
        color: #528;
      }
      .form button[type="submit"] {
        width: 100%;
        padding: 1rem;
        margin-top: 2rem;
        border-radius: 2px;
        border: 0;
        font-weight: 500;
        font-size: 1.5rem;
        box-shadow: 3px 3px 1px #00ca9c;
        background: #528;
        color: white;
      }
      #short {
        margin-top: 2rem;
        padding: 1rem 0;
        display: flex;
        justify-content: center;
        font-size: 2rem;
        color: #528;
      }
      .btn {
        padding: 6px 12px;
        border-radius: 2px;
        border: 0;
        font-weight: 500;
        font-size: 1.5rem;
        box-shadow: 3px 3px 1px #00ca9c;
        background: #528;
        color: white;
      }
      #foo {
        width: 100%;
        height: 20px;
        font-family: inherit;
        padding: 1rem 0.5rem;
        border: none;
        border: 2px solid #528;
        border-bottom: 4px solid #528;
        text-align: center;
        font-size: 1.5rem;
        transition: border-bottom-color 0.3s ease-in-out;
        caret-color: #528;
        color: #528;
        fill: #fff;
      }
      .btn img {
        color: #fff;
      }
      .subtitle {
        font-family: Federant;
      }
