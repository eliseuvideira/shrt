    <header>
      <figure>
        <img
          src="/public/logo.png"
          alt="shrt logo"
          width="387px"
          height="128px"
        />
      </figure>
    </header>
    <main>
      <h2 class="subtitle">short url once</h2>
      <form class="form">
        <section class="section-input">
          <label for="id">url</label>
          <input type="url" name="url" id="url" placeholder="url" />
        </section>
        <section>
          <button type="submit">short</button>
        </section>
      </form>
      <section id="short" class="section-input">
        <label for="short-url"
          >short url
          <input id="short-url" value="" readonly />
        </label>
        <button class="btn" data-clipboard-target="#foo">
          <img src="/public/clippy.svg" alt="Copy to clipboard" width="20px" />
        </button>
      </section>
    </main>
